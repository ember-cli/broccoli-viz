#!/usr/bin/env node

var viz = require('..');
var fs = require('fs');

var argv = require('minimist')(process.argv.slice(2));
var USAGE = 'Usage: broccoli-viz [--root-id=id] [--stats=pattern] FILE ';

function usage() {
  console.error(USAGE);
  process.exit(1);
}

function help() {
  console.log(USAGE);
  process.exit(0);
}

if (argv.h || argv.help) {
  help();
}

var inputPath = argv._[0];
if (! inputPath) {
  usage();
}


var json = JSON.parse(fs.readFileSync(inputPath).toString());
var patterns = argv.stats;
if (patterns && !Array.isArray(patterns)) {
  patterns = [patterns];
}

console.log(viz.dot(viz.process(json.nodes, argv), { stats: patterns }));

